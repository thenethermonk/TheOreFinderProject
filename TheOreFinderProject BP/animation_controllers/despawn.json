{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.despawn": {
      "states": {
        "default": {
          "transitions": [ 
            { 
              "despawn": "query.mark_variant == 60" 
            } 
          ]
        },
        "despawn":{
          "transitions":[
            {
              "default": "query.mark_variant != 60"
            }
          ],
          "on_entry":[
            "/kill @s",
            "/execute in nether run kill @s"
          ]
        }
      }
    }
  }
}